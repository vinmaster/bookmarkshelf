<!DOCTYPE html>
<html>
<head>
  <title>Bookmarkshelf</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="ui black">
  <div class="ui large secondary inverted pointing menu">
    <a href="/" class="<%= 'active' if current_page?('/') %> item">Home</a>
    <a href="/bookmarks" class="<%= 'active' if current_page?('/bookmarks') %> item">Bookmarks</a>
    <div class="right item">
      <a href="/users/sign_in" class="ui inverted button">Log in</a>
      <a href="/users/sign_up" class="ui inverted button">Sign Up</a>
    </div>
  </div>
</div>

<%= yield %>

</body>
</html>
